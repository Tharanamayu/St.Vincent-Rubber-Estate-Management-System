        </RadioButton>
        <RadioButton fx:id="rdoFemale" layoutX="134.0" layoutY="75.0" mnemonicParsing="false" onAction="#rdoFemaleAP" text="Female" toggleGroup="$gender" />
        <Button fx:id="btnReportGen" layoutX="79.0" layoutY="117.0" mnemonicParsing="false" onAction="#btnReportGenAP" prefHeight="25.0" prefWidth="198.0" text="Genarate Report" />
        <Label layoutX="14.0" layoutY="14.0" prefHeight="17.0" prefWidth="327.0" text="Select a gender to genarate the report." />
    </children>
</AnchorPane>
